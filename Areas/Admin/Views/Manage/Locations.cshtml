@model AirBB.Models.Location
@{
    ViewBag.Title = "Location Management";
    var locations = ViewBag.Locations as List<AirBB.Models.Location> ?? new List<AirBB.Models.Location>();
}

@section scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/location-validation.js"></script>
    <script src="~/js/location-management.js"></script>
}

<div class="container-fluid">
    <h2>Location Management</h2>
    
    <!-- Tab Navigation -->
    <ul class="nav nav-tabs" id="locationTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="add-location-tab" data-bs-toggle="tab" data-bs-target="#add-location" type="button" role="tab">
                Add New Location
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="list-locations-tab" data-bs-toggle="tab" data-bs-target="#list-locations" type="button" role="tab">
                All Locations
            </button>
        </li>
    </ul>

    <!-- Tab Content -->
    <div class="tab-content" id="locationTabContent">
        <!-- Add Location Tab -->
        <div class="tab-pane fade show active" id="add-location" role="tabpanel">
            <div class="card mt-3">
                <div class="card-body">
                    <!-- Model-level validation summary -->
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <strong>Please fix the errors below:</strong>
                        </div>
                    }
                    
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <form id="location-form" asp-action="Locations" method="post" class="admin-form">
                        <input asp-for="LocationID" type="hidden" />
                        <input type="hidden" id="IsEdit" name="IsEdit" value="false" />
                        
                        <div class="row mb-2">
                            <label asp-for="Name" class="col-form-label col-md-2">Location Name</label>
                            <div class="col-md-4">
                                <input asp-for="Name" class="form-control" placeholder="e.g., Chicago, New York" maxlength="100" />
                                <small class="form-text text-muted">Enter a unique location name, max 100 characters</small>
                            </div>
                            <div class="col">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="offset-md-2 col">
                                <button type="submit" class="btn btn-primary admin-btn" id="submit-btn">Add Location</button>
                                <button type="button" class="btn btn-secondary admin-btn" id="cancel-btn" style="display:none;">Cancel</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- List Locations Tab -->
        <div class="tab-pane fade" id="list-locations" role="tabpanel">
            <div class="card mt-3">
                <div class="card-body">
                    <h5 class="card-title">All Locations</h5>
                    
                    <!-- Alert for deletion warnings -->
                    <div id="deletion-alert" class="alert alert-warning" style="display:none;">
                        <strong>Warning:</strong> <span id="deletion-message"></span>
                    </div>
                    
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>ID</th>
                                    <th>Location Name</th>
                                    <th>Residences Count</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var location in locations)
                                {
                                    var residenceCount = ViewContext.HttpContext.RequestServices
                                        .GetService<AirBB.Models.DataLayer.ResidenceContext>()
                                        ?.Residences.Count(r => r.LocationID == location.LocationID) ?? 0;
                                    
                                    <tr id="location-row-@location.LocationID">
                                        <td>@location.LocationID</td>
                                        <td>@location.Name</td>
                                        <td>@residenceCount</td>
                                        <td>
                                            <button class="btn btn-sm btn-warning edit-btn" data-location-id="@location.LocationID">
                                                <i class="fas fa-edit"></i> Edit
                                            </button>
                                            <button class="btn btn-sm btn-danger delete-btn" data-location-id="@location.LocationID" data-location-name="@location.Name">
                                                <i class="fas fa-trash"></i> Delete
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        
                        @if (!locations.Any())
                        {
                            <div class="text-center mt-3">
                                <p class="text-muted">No locations found. Add your first location using the form above.</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>